<%- include("partials/header") %>

<div class="container py-5">
  <h2 class="text-center mb-5 fw-bold">Browse Cattle Breeds</h2>



  <div class="row g-4">
    <% breeds.forEach(breed => { %>
      <div class="col-md-4">
        <div class="card h-100 shadow-sm">
          <img src="<%= breed.image %>" class="card-img-top" alt="<%= breed.name %>" style="object-fit: cover; height: 250px; width: 100%;">
          <div class="card-body">
          <h5 class="card-title"><%= breed.displayName %></h5>
            <p class="card-text text-muted"><%= breed.description %></p>
            <p><strong>Origin:</strong> <%= breed.origin %></p>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>



<%- include("partials/footer") %>
